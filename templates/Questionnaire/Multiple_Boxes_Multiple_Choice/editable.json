{
	"#image": {
		"add-option": {
			"before": ".save_button"
		},
		"image": true, 
		"resize": {
			"resize-height": true
		},
		"inset": true
	},

	"#text_intro": {
		"animation": true,
		"resize": true,
		"move": true,
		"color": true,
		"font": {
			"size": true,
			"family": true
		},
		"border": true
	},
	"#text_content": {
		"text": {
			"html": true
		}
	},
	".modal": {
		"color": true
	},
	".popup_image": {
		"image": true,
		"resize": true,
		"inset": true,
		"delete": true
	},
	".popup_text": {
		"text": {
			"html": true
		},
		"font":{
			"size":true
		},
		"inset":true,
		"resize": true
	},
	".answer": {
		"answer": true,
		"animation": true,
		"image": {
			"show-placeholder":false
		},
		"delete": true,
		"resize": true,
		"move": true,
		"color": true,
		"font": {
			"size": true
		},
		"border": true
	},
	".answer label": {
		"text": true
	},
	"#save_button": {
		"animation":true,
		"text": true,
		"move": true,
		"color": true,
		"resize": true,
		"font": {
			"size": true
		}
	},
	".modal-header h3": {
		"text": true,
		"font": {
			"size": true
		}
	}
